[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st  = status
  sh  = stash
  sp  = stash pop
  ci  = commit
  cm  = commit -m
  cma = commit -a -m
  cam = commit --amend
  br  = branch
  db  = branch -d
  co  = checkout
  cob = checkout -b
  df  = diff
  lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  pl  = log --pretty=format:'%Cgreen%h %Creset%s'
  pr  = pull --rebase
  f   = fetch
[core]
  excludesfile = /Users/mongrelion/.gitignore_global
  editor = /usr/local/bin/vim
  rerere = enabled
	quotepath = false

[mergetool]
  keepBackup = true

[diff]
  tool = diffmerge

[difftool "diffmerge"]
  cmd = diffmerge \"$LOCAL\" \"$REMOTE\"

[merge]
  tool = diffmerge

[mergetool "diffmerge"]
  cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
  trustExitCode = true

[difftool "sourcetree"]
  cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
  path =

[mergetool "sourcetree"]
  cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
  trustExitCode = true

[push]
  default = simple
[pull]
  rebase = true
