[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[alias]
  st  = status
  sh  = stash
  sp  = stash pop
  ci  = commit
  cm  = commit -m
  cma = commit -a -m
  cam = commit --amend
  br  = branch
  db  = branch -d
  co  = checkout
  cob = checkout -b
  df  = diff
  lg  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  pl  = log --pretty=format:'%Cgreen%h %Creset%s'
  pr  = pull --rebase
  f   = fetch
  who = blame

[core]
  excludesfile = /Users/mongrelion/.gitignore
  editor = /usr/local/bin/nvim
  rerere = enabled
  quotepath = false

[init]
	defaultBranch = main

[merge]
  tool = nvim

[mergetool "nvim"]
  cmd = nvim -d \"$MERGED\"

[mergetool]
  prompt = false

[push]
  default = simple

[pull]
  rebase = true
